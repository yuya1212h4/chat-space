.chat-body
  %ul.chat-messages
    %li.chat-message
      - messages.each do |message|
        .chat-message__header.clearfix
          %p.chat-message__name
            user1
          %p.chat-message__time
            = message.created_at
        %p.chat-message__body
          = message.body
.chat-footer
  = form_for [@group, @message], {url: {:action => 'create'}} do |f|
    = f.text_field :body, class: 'textarea', autofocus: true, placeholder: 'type a message'
    = f.submit 'Send', class: 'submit'
    %i.fa.fa-file-image-o
