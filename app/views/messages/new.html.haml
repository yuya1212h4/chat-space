.layout-notification
  .chat
    = render 'layouts/sidebar'
    .chat-main
      .chat-header.clearfix
        .chat-header--left
          %h2= @group.name
          %p.chat-header__users
            Members:
            %span.chat-header__user
              - @group.users.each do |user|
                = user.name
        .chat-header--right
          = link_to 'Edit', edit_group_path(@group), class: 'chat-header__edit-btn'
      .chat-body
        %ul.chat-messages
          = render @group.messages
      .chat-footer
        = form_for [@group, @message] do |f|
          = f.text_field :body, class: 'textarea', autofocus: true, placeholder: 'type a message'
          = f.submit 'Send', class: 'submit-save'
          %i.fa.fa-file-image-o
